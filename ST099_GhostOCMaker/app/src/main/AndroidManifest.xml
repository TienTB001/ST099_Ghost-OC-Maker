<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Quyền yêu cầu thông báo trên Android 13+ -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ST099_GhostOCMaker"
        tools:targetApi="31">
        <activity
            android:name=".ui.CustomizeActivity"
            android:exported="false" />
        <activity
            android:name=".ui.MyAlbumActivity"
            android:exported="false" />
        <activity
            android:name=".ui.CategoryActivity"
            android:exported="false" />
        <activity
            android:name=".ui.SettingActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".ui.PermissionActivity"
            android:exported="true" >



        </activity>
        <activity
            android:name=".intro.IntroActivity"
            android:exported="false" />
        <activity
            android:name=".Language.LanguageActivity"
            android:exported="true" >


        </activity>
        <activity
            android:name=".ui.Splash.SplashActivity"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>