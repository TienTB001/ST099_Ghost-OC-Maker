<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:background="@drawable/rate"
    android:layout_height="wrap_content"
    tools:context=".rate.Rate">

    <LinearLayout
        android:id="@+id/LNRate"
        android:background="@drawable/rate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgIcon"
            android:layout_width="72sp"
            android:layout_height="72dp"
            android:src="@drawable/image0" />

        <TextView
            android:id="@+id/txRateTitle"
            android:gravity="center"
            android:fontFamily="@font/nunito"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/txtRateDesc"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="20dp"
            android:text="TextView" />

        <com.willy.ratingbar.ScaleRatingBar
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/simpleRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            app:srb_clearRatingEnabled="true"
            app:srb_clickable="true"
            app:srb_isIndicator="false"
            app:srb_minimumStars="0"
            app:srb_numStars="5"
            app:srb_rating="0"
            app:srb_scrollable="true"
            app:srb_starHeight="30dp"
            app:srb_starPadding="15dp"
            app:srb_starWidth="30dp"
            app:srb_drawableEmpty="@drawable/no_star"
            app:srb_drawableFilled="@drawable/star_full"
            app:srb_stepSize="1.0">
        </com.willy.ratingbar.ScaleRatingBar>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnRate"
            android:background="@drawable/bg_check"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="@string/Rate" />

        <androidx.appcompat.widget.AppCompatButton
            android:background="@null"
            android:id="@+id/btnExit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="@string/Exit"/>


    </LinearLayout>

</FrameLayout>